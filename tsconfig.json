{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noErrorTruncation": true,
    "composite": false,
    "noEmitOnError": false,
    "importsNotUsedAsValues": "remove",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["node", "vite/client"],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "resolveJsonModule": true,
    "isolatedModules": false,
    "allowImportingTsExtensions": false,
    "moduleDetection": "force",
    "baseUrl": ".",
    "importHelpers": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@shared/*": ["./shared/*", "./shared/index.ts", "./shared/index.js"],
      "@/*": ["./client/src/*", "./client/src/index.ts", "./client/src/index.js"],
      "#shared/*": ["./shared/*.ts", "./shared/*.js", "./shared/index"],
      "#server/*": ["./server/*.ts", "./server/*.js", "./server/index"]
    },
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "ignoreDeprecations": "5.0",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "sourceMap": false,
    "declaration": false,
    "incremental": false
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.tsx",
    "server/**/*.js",
    "server/**/*.jsx",
    "shared/**/*.ts",
    "shared/**/*.tsx",
    "shared/**/*.js",
    "shared/**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client/**/*",
    "**/*.test.ts",
    "**/*test*.ts",
    "**/test-*.ts",
    "**/__tests__/**"
  ]
}
