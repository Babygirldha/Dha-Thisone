    "helmet": "^7.0.0",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "pdfkit": "0.13.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.21",
    "typescript": "^5.9.3",
    "vite": "^7.1.10"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8"
