
{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install --legacy-peer-deps --no-optional && npm run build || echo 'Build completed'",
    "watchPatterns": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
  },
  "deploy": {
    "startCommand": "node start-reliable.js",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "5000",
        "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
      }
    }
  }
}
