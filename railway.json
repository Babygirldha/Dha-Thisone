
{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install --force && npm run build",
    "watchPatterns": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "5000"
      }
    }
  }
}
