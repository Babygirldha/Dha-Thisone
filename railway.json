{
  "name": "DHA Digital Services Platform",
  "description": "Military-grade AI system for South African Department of Home Affairs with comprehensive document generation capabilities",
  "build": {
    "buildCommand": "npm install && npm run build"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environment": {
    "NODE_ENV": "production",
    "PORT": "$PORT"
  },
  "healthcheck": {
    "path": "/api/health",
    "initialDelaySeconds": 60,
    "periodSeconds": 30,
    "timeoutSeconds": 10,
    "failureThreshold": 3
  }
}