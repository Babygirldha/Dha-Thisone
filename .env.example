
# ==============================================================================
# DHA DIGITAL SERVICES PLATFORM - PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================================================

# ============================= BASIC CONFIGURATION =============================
NODE_ENV=production
PORT=5000
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================= SECURITY SECRETS =============================
# CRITICAL: Generate these with crypto.randomBytes() - DO NOT use these examples!
JWT_SECRET=your_jwt_secret_64_chars_minimum_for_government_grade_security_here
SESSION_SECRET=your_session_secret_32_chars_minimum_here
ENCRYPTION_KEY=your_encryption_key_32_chars_here
VITE_ENCRYPTION_KEY=your_vite_encryption_key_32_chars_here
MASTER_ENCRYPTION_KEY=your_master_encryption_key_64_chars_here
QUANTUM_ENCRYPTION_KEY=your_quantum_encryption_key_64_chars_here
BIOMETRIC_ENCRYPTION_KEY=your_biometric_encryption_key_32_chars_here
DOCUMENT_SIGNING_KEY=your_document_signing_key_32_chars_here
API_RATE_LIMIT_SECRET=your_api_rate_limit_secret_here
WEBHOOK_SECRET=your_webhook_secret_32_chars_here

# ============================= DATABASE CONFIGURATION =============================
DATABASE_URL=postgresql://username:password@hostname:5432/database_name?sslmode=require

# ============================= AI SERVICES =============================
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# ============================= GOVERNMENT API KEYS =============================
# DHA (Department of Home Affairs) APIs
DHA_NPR_API_KEY=your_dha_npr_api_key_here
DHA_ABIS_API_KEY=your_dha_abis_api_key_here
DHA_HOME_AFFAIRS_API_KEY=your_dha_home_affairs_api_key_here

# SAPS (South African Police Service) APIs  
SAPS_CRC_API_KEY=your_saps_crc_api_key_here
SAPS_API_KEY=your_saps_api_key_here

# ICAO (International Civil Aviation Organization) PKD
ICAO_PKD_API_KEY=your_icao_pkd_api_key_here

# SITA (State Information Technology Agency) APIs
SITA_ESERVICES_API_KEY=your_sita_eservices_api_key_here
SITA_API_KEY=your_sita_api_key_here

# GitHub Integration (Optional)
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# ============================= FEATURE FLAGS =============================
# Enable/disable government service integrations
DHA_NPR_ENABLED=true
DHA_ABIS_ENABLED=true
SAPS_CRC_ENABLED=true
ICAO_PKD_ENABLED=true
SITA_ESERVICES_ENABLED=true
MONITORING_ENABLED=true

# Service modes: mock | shadow | live
DHA_NPR_MODE=live
DHA_ABIS_MODE=live
SAPS_CRC_MODE=live
ICAO_PKD_MODE=live
SITA_ESERVICES_MODE=live

# ============================= PRODUCTION SETTINGS =============================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session management
SESSION_MAX_AGE=86400000

# Security headers
HSTS_MAX_AGE=31536000
SECURITY_HEADERS_ENABLED=true

# Performance
ENABLE_GZIP=true
ENABLE_CACHING=true
CACHE_MAX_AGE=3600

# ============================= MONITORING & LOGGING =============================
LOG_LEVEL=info
ENABLE_AUDIT_LOGS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# ============================= DEPLOYMENT CONFIGURATION =============================
# Build settings
BUILD_COMMAND=npm run build
START_COMMAND=npm start

# Health check
HEALTH_CHECK_PATH=/api/health
HEALTH_CHECK_TIMEOUT=30000

# ============================= OPTIONAL INTEGRATIONS =============================
# Email service (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# SMS service (for notifications)  
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=DHA_SERVICES

# File storage (if using cloud storage)
CLOUD_STORAGE_BUCKET=your_storage_bucket
CLOUD_STORAGE_REGION=your_region
CLOUD_STORAGE_ACCESS_KEY=your_access_key
CLOUD_STORAGE_SECRET_KEY=your_secret_key
