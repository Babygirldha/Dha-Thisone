# DHA Digital Services - PRODUCTION CONFIGURATION
# All API keys must be REAL - no mock/simulated data

NODE_ENV=production
PORT=5000

# ============================
# REQUIRED: REAL AI API KEYS
# ============================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_real_openai_key_here

# Optional AI providers
ANTHROPIC_API_KEY=sk-ant-your_real_anthropic_key_here
GOOGLE_GENERATIVE_AI_API_KEY=your_real_google_key_here
MISTRAL_API_KEY=your_real_mistral_key_here
PERPLEXITY_API_KEY=pplx-your_real_perplexity_key_here

# ============================
# REAL GOVERNMENT API KEYS
# ============================
# Apply through official government portals
DHA_NPR_API_URL=https://api.dha.gov.za/npr
DHA_NPR_API_KEY=your_real_dha_npr_key
DHA_API_SECRET=your_real_dha_secret

DHA_ABIS_API_URL=https://abis.dha.gov.za/api
DHA_ABIS_API_KEY=your_real_dha_abis_key

SAPS_CRC_API_URL=https://api.saps.gov.za/crc
SAPS_CRC_API_KEY=your_real_saps_key

ICAO_PKD_API_URL=https://pkddownloadsg.icao.int/api
ICAO_PKD_API_KEY=your_real_icao_key

# ============================
# DATABASE (REQUIRED)
# ============================
DATABASE_URL=postgresql://user:pass@host:5432/db
# Fallback: DATABASE_URL=sqlite:./dha_database.sqlite

# ============================
# SECURITY (REQUIRED)
# ============================
JWT_SECRET=your_secure_jwt_secret_32_chars_min
ENCRYPTION_KEY=your_secure_encryption_key_32_chars_min

# ============================
# PRODUCTION SETTINGS
# ============================
FORCE_REAL_APIS=true
ENABLE_BIOMETRIC_AUTH=true
ENABLE_AI_ASSISTANT=true
ENABLE_DOCUMENT_GENERATION=true
ENABLE_FRAUD_DETECTION=true
ENABLE_AUDIT_LOGGING=true