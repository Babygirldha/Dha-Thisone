# DHA Digital Services Platform Configuration
NODE_ENV=production
PORT=5000

# ============================
# AI Service API Keys
# ============================
# Primary AI service
OPENAI_API_KEY=your_openai_api_key_here

# Optional additional AI services
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# GOOGLE_API_KEY=your-google-api-key-here
# PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here

# ============================
# DATABASE (REQUIRED)
# ============================
# PostgreSQL connection string or SQLite file path
DATABASE_URL=your_database_url_here
# OR for SQLite (fallback):
# DATABASE_URL=sqlite:./dha_database.sqlite

# ============================
# SECURITY (REQUIRED)
# ============================
# Generate secure random strings (32+ characters)
# SESSION_SECRET=your_secure_32_character_session_secret_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# ============================
# GOVERNMENT INTEGRATIONS (OPTIONAL)
# ============================
# DHA API Key
DHA_API_KEY=your_dha_api_key_here
# SAPS CRC API Key
SARS_API_KEY=your_sars_api_key_here
# ICAO PKD API Key
# ICAO_PKD_API_KEY=your-icao-pkd-api-key

# ============================
# FEATURES CONFIGURATION
# ============================
ENABLE_BIOMETRIC_AUTH=true
ENABLE_AI_ASSISTANT=true
ENABLE_DOCUMENT_GENERATION=true
ENABLE_FRAUD_DETECTION=true
ENABLE_AUDIT_LOGGING=true

# ============================
# FILE HANDLING
# ============================
MAX_FILE_SIZE=50mb
UPLOAD_TIMEOUT=300000

# ============================
# Theme Configuration
# ============================
THEME_PRIMARY=blue-green-gold
THEME_MODE=government-professional
# ============================
# REAL GOVERNMENT API KEYS
# ============================
# Apply for these at respective government portals
DHA_NPR_API_URL=https://api.dha.gov.za/npr
DHA_NPR_API_KEY=your_dha_npr_api_key_here
DHA_API_SECRET=your_dha_api_secret_here

DHA_ABIS_API_URL=https://abis.dha.gov.za/api
DHA_ABIS_API_KEY=your_dha_abis_api_key_here
DHA_CLIENT_CERT=your_client_certificate_here

SAPS_CRC_API_URL=https://api.saps.gov.za/crc
SAPS_CRC_API_KEY=your_saps_crc_api_key_here
SAPS_AGENCY_ID=your_agency_id_here

ICAO_PKD_API_URL=https://pkddownloadsg.icao.int/api
ICAO_PKD_API_KEY=your_icao_pkd_api_key_here

# Real AI Provider Keys
OPENAI_API_KEY=your_openai_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here
GOOGLE_GENERATIVE_AI_API_KEY=your_google_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Real Quantum Computing APIs
QUANTUM_API_URL=https://api.quantum-computing.ibm.com
QUANTUM_API_KEY=your_quantum_api_key_here
IBM_QUANTUM_TOKEN=your_ibm_quantum_token_here

# Real MLOps Platform
MLOPS_API_URL=https://api.mlops.platform
MLOPS_API_KEY=your_mlops_api_key_here

# Web3 & Blockchain
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_project_id
POLYGON_RPC_URL=https://polygon-rpc.com
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Cloud Services
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AZURE_CLIENT_ID=your_azure_client_id
GOOGLE_CLOUD_PROJECT=your_gcp_project_id
