# Railway Environment Variables Template
# Copy these to your Railway environment variables settings

# ============================
# RAILWAY SYSTEM VARIABLES
# ============================
# These are automatically provided by Railway
PORT=5000
NODE_ENV=production
DATABASE_URL=postgresql://username:password@host:port/database

# ============================
# APPLICATION CONFIGURATION
# ============================
# Session security (REQUIRED - Generate a 32+ character random string)
SESSION_SECRET=your_secure_32_character_session_secret_here

# Client URL for CORS (Railway will provide this)
CLIENT_URL=https://your-app-name.up.railway.app

# ============================
# AI SERVICE API KEYS (REQUIRED)
# ============================
# OpenAI API (Primary AI service)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Claude API (Secondary AI service)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google Gemini API (Third AI service)
GOOGLE_API_KEY=your-google-api-key-here

# Perplexity API (Fourth AI service)
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here

# Additional AI service (if any - Fifth AI service)
# Add your fifth AI service API key here

# ============================
# SECURITY & AUTHENTICATION
# ============================
# JWT secret for token signing
JWT_SECRET=your-jwt-secret-here

# Password encryption salt rounds
BCRYPT_SALT_ROUNDS=12

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================
# GOVERNMENT INTEGRATIONS
# ============================
# DHA NPR API Configuration
DHA_NPR_API_URL=https://npr.dha.gov.za/api
DHA_NPR_API_KEY=your-dha-npr-api-key

# SAPS CRC API Configuration
SAPS_CRC_API_URL=https://saps.gov.za/crc/api
SAPS_CRC_API_KEY=your-saps-crc-api-key

# ICAO PKD Configuration
ICAO_PKD_API_URL=https://pkd.icao.int/api
ICAO_PKD_API_KEY=your-icao-pkd-api-key

# ============================
# STORAGE & FILE HANDLING
# ============================
# File upload limits
MAX_FILE_SIZE=50mb
UPLOAD_TIMEOUT=300000

# Document storage
DOCUMENT_STORAGE_PATH=/tmp/documents
PDF_GENERATION_TIMEOUT=30000

# ============================
# MONITORING & LOGGING
# ============================
# Enable production logging
ENABLE_AUDIT_LOGGING=true
ENABLE_SECURITY_MONITORING=true
ENABLE_PERFORMANCE_MONITORING=true

# Error tracking
ENABLE_ERROR_TRACKING=true
ERROR_NOTIFICATION_EMAIL=admin@dha.gov.za

# ============================
# WEBSOCKET CONFIGURATION
# ============================
WEBSOCKET_ENABLED=true
WEBSOCKET_HEARTBEAT_INTERVAL=30000

# ============================
# DEPLOYMENT CONFIGURATION
# ============================
# Build configuration
BUILD_TIMEOUT=600
DEPLOYMENT_ENV=railway

# Health check configuration
HEALTH_CHECK_ENDPOINT=/api/health
HEALTH_CHECK_TIMEOUT=10000

# ============================
# FEATURE FLAGS
# ============================
ENABLE_BIOMETRIC_AUTH=true
ENABLE_QUANTUM_ENCRYPTION=true
ENABLE_AI_ASSISTANT=true
ENABLE_DOCUMENT_GENERATION=true
ENABLE_FRAUD_DETECTION=true